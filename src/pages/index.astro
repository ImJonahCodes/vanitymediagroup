---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/main-page/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import AboutUs from '~/components/main-page/AboutUs.astro'
import CallToAction from '~/components/widgets/CallToAction.astro';
import Header from '~/components/widgets/Header.astro';

const metadata = {
  title: 'Vanity Media â€” Welcome',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>

  <Fragment slot="header">
    <Header
      links={[
        { text: 'Home', href: '#' },
        { text: 'About Us', href: '#' },
        { text: 'Events', href: '#' },
        { text: 'Blog', href: '#' },
        { text: 'Shop', href: '#' },
      ]}
      actions={[
        {
          text: 'Our Instagram',
          href: '#',
        },
      ]}
      isSticky
      {/* showToggleTheme */}
    />
  </Fragment>

  <!-- Hero -->
  <Hero
    id="hero"
    title="VANITY"
    tagline="MEDIA"
    year="2019"
  >
  <Fragment slot="subtitle">
    Automotive Brand & Media Group based out of Pittsburgh, PA
  </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note />

  <!-- About Us -->
  <AboutUs 
    title="ABOUT US"
    description='Vanity Media is a group of car enthusiasts that create online content aswell as offering Automotive Services, Products & More'
  >

</Layout>
